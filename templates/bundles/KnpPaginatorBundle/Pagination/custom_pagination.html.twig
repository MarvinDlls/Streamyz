{% if pageCount > 1 %}
    <nav class="flex items-center justify-center space-x-2">
        {% if first is defined and current != first %}
            <a href="{{ path(route, query|merge({(pageParameterName): first})) }}" 
               class="px-3 py-2 rounded-lg bg-purple-400 text-white hover:bg-pink-400">
                «
            </a>
        {% endif %}

        {% if previous is defined %}
            <a href="{{ path(route, query|merge({(pageParameterName): previous})) }}" 
               class="px-3 py-2 rounded-lg bg-purple-400 text-white hover:bg-pink-400">
                ‹
            </a>
        {% endif %}

        {% for page in pagesInRange %}
            {% if page != current %}
                <a href="{{ path(route, query|merge({(pageParameterName): page})) }}" 
                   class="px-3 py-2 rounded-lg bg-purple-400 text-white hover:bg-pink-400">
                    {{ page }}
                </a>
            {% else %}
                <span class="px-3 py-2 rounded-lg bg-pink-400 text-white">
                    {{ page }}
                </span>
            {% endif %}
        {% endfor %}

        {% if next is defined %}
            <a href="{{ path(route, query|merge({(pageParameterName): next})) }}" 
               class="px-3 py-2 rounded-lg bg-purple-400 text-white hover:bg-pink-400">
                ›
            </a>
        {% endif %}

        {% if last is defined and current != last %}
            <a href="{{ path(route, query|merge({(pageParameterName): last})) }}" 
               class="px-3 py-2 rounded-lg bg-purple-400 text-white hover:bg-pink-400">
                »
            </a>
        {% endif %}
    </nav>
{% endif %}
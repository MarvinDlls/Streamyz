<header class="bg-gradient-to-r from-purple-900 to-blue-900 py-6 shadow-xl">
    <div class="max-w-7xl mx-auto">
        <h1 class="text-5xl font-bold text-center pb-1 bg-clip-text text-transparent bg-gradient-to-r from-purple-400 to-pink-400">
            <a href="{{ path('movie_list') }}">
            Streamyz
            </a>
        </h1>
        <p class="text-center text-gray-300 text-lg pb-1">Découvrez tous les films à l'affiche</p>
    </div>
    <section aria-labelledby="movies-search">
        <form action="{{ path('movie_list') }}" method="GET" class="max-w-2xl mx-auto">
            <div class="relative">
                <div class="absolute inset-y-0 start-0 flex items-center ps-4 pointer-events-none">
                    <svg class="w-5 h-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 20 20">
                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m19 19-4-4m0-7A7 7 0 1 1 1 8a7 7 0 0 1 14 0Z"/>
                    </svg>
                </div>
                <input
                    type="search"
                    name="search"
                    value="{{ search|default('') }}"
                    class="block w-full p-5 ps-12 text-lg rounded-2xl bg-gray-800 border border-gray-700 text-gray-100 placeholder-gray-400 focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all duration-300"
                    placeholder="Rechercher par titre..."
                    aria-label="Rechercher des films"
                />
                <button type="submit" class="absolute end-3 top-1/2 -translate-y-1/2 bg-gradient-to-r from-purple-600 to-pink-600 hover:from-purple-500 hover:to-pink-500 text-white font-medium rounded-xl px-6 py-2.5 transition-all duration-300 cursor-pointer">
                    Rechercher
                </button>
            </div>
        </form>
    </section>
</header>
{% extends 'base.html.twig' %}

{% block title %}
	{{ details.title }}
	({{ details.release_date|slice(0,4) }})
{% endblock %}

{% block body %}
	<body class="bg-gray-900 min-h-screen text-gray-100">
		<div class="p-6">
			<button class="cursor-pointer transform active:scale-75 transition-transform bg-gray-800 p-2 rounded-full shadow-md hover:bg-gray-700">
				<a href="{{ app.request.headers.get('referer') }}">
					{{ ux_icon('nrk:back', {height: '24px', width: '24px', color: 'white'}) }}
				</a>
			</button>
		</div>

		<div class="movies gap-6 p-6">
			<div class="movie flex flex-row">
				<div class="relative">
					<img
					class="w-full h-full rounded-xl object-cover" src="https://image.tmdb.org/t/p/w500{{ details.poster_path }}" alt="{{ details.title }}">

					{# Cercle de vote #}
					<div class="absolute top-2 right-2">
						<div class="w-10 h-10 rounded-full bg-gray-900 border-gray-700 flex items-center justify-center relative">
							<svg class="w-10 h-10 absolute top-0 left-0 transform -rotate-90" viewbox="0 0 36 36">
								<circle cx="18" cy="18" r="15.91549430918954" fill="transparent" stroke="#1a1a1a" stroke-width="3"></circle>
								<circle cx="18" cy="18" r="15.91549430918954" fill="transparent" stroke="{% if details.vote_average >= 7 %}#22c55e{% elseif details.vote_average >= 5 %}#eab308{% else %}#ef4444{% endif %}" stroke-width="3" stroke-dasharray="{{ (details.vote_average * 10)|round }}, 100" stroke-linecap="round" class="progress-circle"></circle>
							</svg>
							<span class="text-xs font-bold z-10 {% if details.vote_average >= 7 %}text-green-500{% elseif details.vote_average >= 5 %}text-yellow-500{% else %}text-red-500{% endif %}">
								{{ (details.vote_average * 10)|round }}%
							</span>
						</div>
					</div>
				</div>


				<div class="flex flex-col pl-6 pr-6 gap-6">
					<h2 class="text-3xl text-center font-bold text-transparent bg-clip-text bg-gradient-to-r from-purple-400 to-pink-400">
						{{ details.title }}
						({{ details.release_date|slice(0,4) }})
					</h2>
					<p class="text-lg text-center font-bold text-transparent bg-clip-text bg-gradient-to-r from-purple-400 to-pink-400 max-w-[800px] mx-auto">
						{{ details.overview }}
					</p>
					<p class="text-lg text-center font-bold text-transparent bg-clip-text bg-gradient-to-r from-purple-400 to-pink-400 max-w-[800px] mx-auto ">
						Pays de production :
						<span class="bold text-white italic">
							{% for country in details.production_countries %}
								{{ country.name }}
							{% endfor %}
						</span>
					</p>
					<p class="text-lg text-center font-bold text-transparent bg-clip-text bg-gradient-to-r from-purple-400 to-pink-400">
						Langue d'origine :
						<span class="bold text-white italic uppercase">
							{{ details.original_language }}
						</span>
					</p>
					<p class="text-lg flex items-center justify-center gap-2 font-bold text-transparent bg-clip-text bg-gradient-to-r from-purple-400 to-pink-400">
						{{ ux_icon('svg-spinners:clock', {height: '24px', width: '24px', color: 'white'}) }}
						Dur√©e :
						<span class="bold text-white italic">
							{{ details.runtime }}
							Minutes
						</span>
					</p>
					<p class="text-lg flex items-center justify-center gap-2 font-bold text-transparent bg-clip-text bg-gradient-to-r from-purple-400 to-pink-400">
						{{ ux_icon('emojione-monotone:bank', {height: '24px', width: '24px', color: 'white'}) }}
						Budget :
						<span class="bold text-white italic">
							{% if details.budget == 0 %}
								N/A
							{% elseif details.budget|length == 8 %}
								${{ details.budget|slice(0,2) }}
								M
							{% elseif details.budget|length == 9 %}
								${{ details.budget|slice(0,3) }}
								M
							{% elseif details.budget|length == 10 %}
								${{ details.budget|slice(0,1) }}.{{ details.budget|slice(1,1) }}
								Md
							{% else %}
								${{ details.budget }}
							{% endif %}
						</span>
					</p>
					<p class="text-lg flex items-center justify-center gap-2 font-bold text-transparent bg-clip-text bg-gradient-to-r from-purple-400 to-pink-400">
						{{ ux_icon('game-icons:cash', {height: '24px', width: '24px', color: 'white'}) }}
						Revenue :
						<span class="bold text-white italic">
							{% if details.revenue == 0 %}
								N/A
							{% elseif details.revenue|length == 8 %}
								${{ details.revenue|slice(0,2) }}
								M
							{% elseif details.revenue|length == 9 %}
								${{ details.revenue|slice(0,3) }}
								M
							{% elseif details.revenue|length == 10 %}
								${{ details.revenue|slice(0,1) }}.{{ details.revenue|slice(1,1) }}
								Md
							{% else %}
								${{ details.revenue }}
							{% endif %}
						</span>
					</p>
					<div>
						{% if reviews is empty %}
							<p class="text-gray-500">Aucune review disponible pour ce film.</p>
						{% else %}
							<div class="space-y-4">
								{% for review in reviews %}
									<div class="p-4 border rounded-lg max-w-[800px] mx-auto">
										<div class="font-bold text-lg">{{ review.author }}</div>
										<div class="text-gray-600 mt-2">{{ review.content }}</div>
									</div>
								{% endfor %}
							</div>
						{% endif %}
					</div>
				</div>
			</div>

			{% if trailer %}
				<div class="flex justify-center mt-6">
					<div class="video-container w-4xl">
						<iframe src="https://www.youtube.com/embed/{{ trailer.key }}" class="w-full aspect-video rounded-lg" allowfullscreen></iframe>
					</div>
				</div>
				<form action="{{ path('movie_detail', {id: details.id}) }}" method="POST" class="flex justify-center py-6">
					<button type="submit" class="bg-gradient-to-r from-purple-600 to-pink-600 hover:from-purple-500 hover:to-pink-500 text-white font-medium rounded-xl px-6 py-2.5 transition-all duration-300 cursor-pointer">
						Signaler la video
					</button>
				</form>
			{% endif %}
			{% for label, messages in app.flashes %}
				<div class="fixed top-6 right-6 z-50 rounded-lg bg-gray-800 animate-fadeInOut">
					<div class="alert alert-{{ label }} bg-{{ label }}-500 text-white p-4 shadow-lg">
						{% for message in messages %}
							<p>{{ message }}</p>
						{% endfor %}
					</div>
				</div>
			{% endfor %}
		</div>
	</body>

{% endblock %}
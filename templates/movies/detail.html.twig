{% extends 'base.html.twig' %}

{% block title %}{{ details.title }} ({{ details.release_date|slice(0,4) }}){% endblock %}

{% block body %}
<body class="bg-gray-900 min-h-screen text-gray-100">
	<div class="movies gap-6 p-6">
		<div class="movie flex flex-row">
			<img class="size-150 rounded-xl object-cover" src="https://image.tmdb.org/t/p/w500{{ details.poster_path }}" alt="{{ details.title }}">
			<div class="flex flex-col pl-6 pr-6 gap-6">
				<h2 class="text-3xl text-center font-bold text-transparent bg-clip-text bg-gradient-to-r from-purple-400 to-pink-400">{{ details.title }}
					({{ details.release_date|slice(0,4) }})</h2>
				<p class="text-lg text-center font-bold text-transparent bg-clip-text bg-gradient-to-r from-purple-400 to-pink-400">{{ details.overview }}</p>
				<p class="text-lg text-center font-bold text-transparent bg-clip-text bg-gradient-to-r from-purple-400 to-pink-400">Langue d'origine :
					{{ details.original_language }}</p>
				<p class="text-lg text-center font-bold text-transparent bg-clip-text bg-gradient-to-r from-purple-400 to-pink-400">DurÃ©e :
					{{ details.runtime }}
					Minutes</p>
				<p class="text-lg text-center font-bold text-transparent bg-clip-text bg-gradient-to-r from-purple-400 to-pink-400">Budget :
					{{ details.budget|slice(0,3) }}M<br>Revenue :
					{{ details.revenue|slice(0,3) }}K</p>
			</div>
		</div>

        {% if trailer %}
            <div class="flex justify-center mt-6">
                <div class="video-container w-4xl">
                    <iframe src="https://www.youtube.com/embed/{{ trailer.key }}" class="w-full aspect-video rounded-lg" allowfullscreen></iframe>
                </div>
            </div>
        {% endif %}
    </div>
</body>
{% endblock %}
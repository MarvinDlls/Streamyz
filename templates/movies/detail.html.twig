{% extends 'base.html.twig' %}

{% block title %}Details du film{% endblock %}

{% block body %}
<body class="bg-gray-900 min-h-screen text-gray-100">
    <div class="movies gap-6 p-6">
        <div class="movie flex flex-row">
            <img class="rounded-xl" src="https://image.tmdb.org/t/p/w500{{ details.poster_path }}" alt="{{ details.title }}">
            <div class="flex flex-col pl-6 pr-6">
                <h2 class="text-2xl text-center font-bold text-transparent bg-clip-text bg-gradient-to-r from-purple-400 to-pink-400">{{ details.title }}  ({{ details.release_date|slice(0,4) }}) <br> {{ details.runtime }}min</h2>
                <p class="text-md text-center font-bold text-transparent bg-clip-text bg-gradient-to-r from-purple-400 to-pink-400">{{ details.overview }}</p>
                <p class="text-md text-center font-bold text-transparent bg-clip-text bg-gradient-to-r from-purple-400 to-pink-400">Langue d'origine : {{ details.original_language }}</p>
                <p class="text-md text-center font-bold text-transparent bg-clip-text bg-gradient-to-r from-purple-400 to-pink-400">Budjet : {{ details.budget|slice(0,3) }}M<br>Revenue : {{ details.revenue|slice(0,3) }}M</p>
            </div>
            
        </div>
    </div>
</body>
{% endblock %}
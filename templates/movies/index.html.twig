{% extends 'base.html.twig' %}

{% block title %}Films Populaires{% endblock %}

{% block body %}
    <h1>Films Populaires</h1>
    <div class="movies">
        {% for movie in movies %}
            <div class="movie">
                <h2>{{ movie.title }}</h2>
                <img src="https://image.tmdb.org/t/p/w500{{ movie.poster_path }}" alt="{{ movie.title }}">
                <p>{{ movie.overview }}</p>
            </div>
        {% endfor %}
    </div>
{% endblock %}